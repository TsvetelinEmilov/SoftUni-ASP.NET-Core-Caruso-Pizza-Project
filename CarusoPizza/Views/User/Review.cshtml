@model ReviewFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add review about this order</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Review"></label>
                <textarea asp-for="Review" rows="4" class="form-control" placeholder="Tell us what you think..."></textarea>
                <span asp-validation-for="Review" class="small text-danger"></span>
            </div>
            <input class="btn btn-primary mt-4" type="submit" value="Save" />
        </form>
    </div>
</div>