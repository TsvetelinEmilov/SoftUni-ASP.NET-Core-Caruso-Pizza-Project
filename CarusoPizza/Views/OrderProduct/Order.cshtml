<section class="py-5">
    <div class="container">
        <h1 style="margin: 2%; text-align: center;">@Model.Name</h1>
        <div>
            <div class="form-group text-center">
                <img src="@Model.ImageUrl" class="img-fluid">
            </div>
            <div class="form-group text-center">
                <input type="text" readonly class="form-control" id="description" name="Description" value="@Model.Description">
            </div>
            <div class="form-group text-center">
                <div class="button-holder">
                    <a href="/Product/AddProductToBasket?productId=@Model.Id" class="btn btn-primary btn-block text-uppercase">Add to basket</a>
                </div>
            </div>
        </div>
    </div>
</section>






